            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Authenticated Product\",\n  \"description\": \"A product created with authentication\",\n  \"price\": 149.99,\n  \"category\": \"electronics\",\n  \"inStock\": true\n}"
