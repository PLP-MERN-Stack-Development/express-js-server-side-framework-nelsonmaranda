            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Product Name\",\n  \"description\": \"Updated description\",\n  \"price\": 199.99,\n  \"category\": \"electronics\",\n  \"inStock\": false\n}"
